{
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "types": [
            "vitest/globals",
            "node"
        ],
        "allowImportingTsExtensions": false,
        "allowJs": true
    },
    "include": [
        "src/**/*",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx",
        "src/test/setup.ts"
    ]
}